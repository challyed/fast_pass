doctype 5
//if lt IE 7
  html(xmlns:ng='http://http://angularjs.org', id='ng-app', class='no-js lt-ie9 lt-ie8 lt-ie7', ng-app='fastpass')
//if IE 7
  html(xmlns:ng='http://http://angularjs.org', id='ng-app', class='no-js lt-ie9 lt-ie8', ng-app='fastpass')
//if IE 8
  html(xmlns:ng='http://http://angularjs.org', id='ng-app', class='no-js lt-ie9', ng-app='fastpass')
//-if gt IE 8
html(class='no-js', ng-app='fastpass')
  //<![endif]
  head
    include layout/_head

  body

    include layout/_chromeframe
    include layout/_dialog

    #main(ng-controller='ApplicationCtrl')
      #left
        .container
          header(role='banner')
            include layout/_header

          .content(role='main', ng-view)
            block content

          footer
            include layout/_footer
      #right

    include layout/_javascripts
